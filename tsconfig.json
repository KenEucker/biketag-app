{
  "include": ["src"],
  "exclude": ["src/coverage/", "test/"],

  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "typeRoots": ["@types", "./node_modules/@types"],
    "rootDir": "./src",
    "outDir": "lib",
    "esModuleInterop": true,
    "declaration": true,
    "strictBindCallApply": true
  }
}
